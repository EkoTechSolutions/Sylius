<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" />

        <service id="Sylius\Bundle\CoreBundle\DataFixtures\EventSubscriber\CreateDefaultLocaleSubscriber">
            <argument type="service" id="sylius.data_fixtures.factory.locale" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\DataFixtures\EventSubscriber\CreateResourceSubscriber">
            <argument type="service" id="sylius.data_fixtures.factory.locator" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\DataFixtures\EventSubscriber\FindOrCreateResourceSubscriber">
            <argument type="service" id="sylius.data_fixtures.factory.locator" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Sylius\Bundle\CoreBundle\DataFixtures\EventSubscriber\RandomOrCreateResourceSubscriber">
            <argument type="service" id="sylius.data_fixtures.factory.locator" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
