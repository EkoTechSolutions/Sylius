<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="sylius.data_fixtures.story.default_channels" class="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultChannelsStory">
            <argument type="service" id="sylius.data_fixtures.factory.channel" />
            <argument>%sylius_locale.locale%</argument>
            <argument>%env(resolve:SYLIUS_FIXTURES_HOSTNAME)%</argument>
            <argument>%env(resolve:SYLIUS_FIXTURES_THEME_NAME)%</argument>
        </service>
        <service id="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultChannelsStoryInterface" alias="sylius.data_fixtures.story.default_channels" />

        <service id="sylius.data_fixtures.story.default_currencies" class="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultCurrenciesStory">
            <argument type="service" id="sylius.data_fixtures.factory.currency" />
        </service>
        <service id="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultCurrenciesStoryInterface" alias="sylius.data_fixtures.story.default_currencies" />

        <service id="sylius.data_fixtures.story.default_geographical" class="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultGeographicalStory">
            <argument type="service" id="sylius.data_fixtures.factory.country" />
            <argument type="service" id="sylius.data_fixtures.factory.zone" />
        </service>
        <service id="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultGeographicalStoryInterface" alias="sylius.data_fixtures.story.default_geographical" />

        <service id="sylius.data_fixtures.story.default_locales" class="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultLocalesStory">
            <argument type="service" id="sylius.data_fixtures.factory.locale" />
            <argument>%sylius_locale.locale%</argument>
        </service>
        <service id="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultLocalesStoryInterface" alias="sylius.data_fixtures.story.default_locales" />

        <service id="sylius.data_fixtures.story.default_menu_taxon" class="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultMenuTaxonStory">
            <argument type="service" id="sylius.data_fixtures.factory.taxon" />
        </service>
        <service id="Sylius\Bundle\CoreBundle\DataFixtures\Story\DefaultMenuTaxonStoryInterface" alias="sylius.data_fixtures.story.default_menu_taxon" />

    </services>
</container>
